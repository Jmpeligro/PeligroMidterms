package com.example.finalspracticegraphics;
import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.graphics.RectF;
import android.view.View;

public class FinalGraphicsPractice extends View {
    private Paint paint = new Paint();

    public FinalGraphicsPractice(Context context) {
        super(context);
    }

    @Override
    protected void onDraw(Canvas canvas) {
        super.onDraw(canvas);
        canvas.drawColor(Color.WHITE);

        // 1. Circle with colored circles inside
        drawCircleWithDots(canvas, 200, 200);

        // 2. Blue rectangle with red text
        drawBlueRectWithText(canvas, 600, 200);

        // 3. Blue rectangle with red cross
        drawRectWithCross(canvas, 200, 500);

        // 4. Inverted Pacman facing left
        drawPacman(canvas, 600, 500);
    }

    private void drawCircleWithDots(Canvas canvas, int x, int y) {
        paint.setColor(Color.BLACK);
        paint.setStyle(Paint.Style.STROKE);
        paint.setStrokeWidth(3);
        canvas.drawCircle(x, y, 80, paint);
        
        paint.setStyle(Paint.Style.FILL);
        paint.setColor(Color.RED);
        canvas.drawCircle(x-30, y-20, 15, paint);
        paint.setColor(Color.GREEN);
        canvas.drawCircle(x+25, y-30, 18, paint);
        paint.setColor(Color.BLUE);
        canvas.drawCircle(x-10, y+35, 12, paint);
        paint.setColor(Color.YELLOW);
        canvas.drawCircle(x+30, y+15, 20, paint);
    }

    private void drawBlueRectWithText(Canvas canvas, int x, int y) {
        paint.setColor(Color.BLUE);
        paint.setStyle(Paint.Style.FILL);
        canvas.drawRect(x-60, y-30, x+60, y+30, paint);
        
        paint.setColor(Color.RED);
        paint.setTextSize(20);
        paint.setTextAlign(Paint.Align.CENTER);
        canvas.drawText("TEXT", x, y+7, paint);
    }

    private void drawRectWithCross(Canvas canvas, int x, int y) {
        paint.setColor(Color.BLUE);
        paint.setStyle(Paint.Style.STROKE);
        paint.setStrokeWidth(4);
        canvas.drawRect(x-50, y-35, x+50, y+35, paint);
        
        paint.setColor(Color.RED);
        paint.setStrokeWidth(5);
        canvas.drawLine(x-30, y, x+30, y, paint);
        canvas.drawLine(x, y-25, x, y+25, paint); 
    }

    private void drawPacman(Canvas canvas, int x, int y) {
        paint.setColor(Color.YELLOW);
        paint.setStyle(Paint.Style.FILL);
        RectF oval = new RectF(x-50, y-50, x+50, y+50);
        canvas.drawArc(oval, 200, 320, true, paint);
        
        paint.setColor(Color.BLACK);
        canvas.drawCircle(x-15, y-20, 5, paint);
    }
}